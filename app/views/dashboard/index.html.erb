<h1>Dashboard#index</h1>
<p>Find me in app/views/dashboard/index.html.erb</p>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>

<h1><%= @daily_budget %></h1>
<%= Date.today.to_formatted_s(:short) %>
<br><br>
<% index = -1 %>
<% arr = [] %>
<% @transactions.each do |transaction| %>
<% index += 1 %>
<% arr.push(index) %>
<div class='panel panel-primary' data-toggle="modal" data-target="#editTransaction">
  <div class="panel-heading"></div>
	<%= transaction.name %><br>
	<%= transaction.catergory.name %><br>
	<%= transaction.amount %> 
	<br><br>
</div>
<% end %>
<%= arr %>
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#expenses">
  -
</button>

<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#income">
  +
</button>

<div class="modal fade" id="expenses" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for @transaction do |f| %>
        <%= f.hidden_field :kind, :value => "expenses"%>
	        <%= f.text_field :name %>
	        <%= f.text_field :amount %>
	        <%= f.submit "Done" %>
      	<%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="income" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for @transaction do |f| %>
          <%= f.hidden_field :kind, :value => "income"%>
          <%= f.text_field :name %>
          <%= f.text_field :amount %>
          <%= f.submit "Done" %>
        <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editTransaction" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for @transaction do |f| %>
          <%= f.hidden_field :kind, :value => @transactions[2].id %>
          <%= f.text_field :name, :value => @transactions[2].name %>
          <%= f.text_field :amount, :value => @transactions[2].amount %>
          <%= f.submit "Done" %>
        <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>




